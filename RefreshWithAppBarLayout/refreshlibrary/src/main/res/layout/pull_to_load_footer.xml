<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_load_footer_content"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="0dp">

    <ProgressBar
        android:id="@+id/pull_to_load_footer_progressbar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:indeterminateDrawable="@anim/update_loading_progressbar_anim"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pull_to_load_footer_hint_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pull_to_refresh_header_hint_loading"
        android:textColor="@color/pull_to_load_footer_text_color"
        android:textSize="14sp" />

</LinearLayout>

